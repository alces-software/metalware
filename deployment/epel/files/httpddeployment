    Options Indexes MultiViews FollowSymlinks
    AllowOverride None
    Require all granted
    Order Allow,Deny
    Allow from $_ALCES_PRVNETWORK/$_ALCES_PRVNETMASK
    Allow from 127.0.0.1/8
</Directory>
