
<div>
  <%= link_to 'Configure domain', 'configure/domain' %>
</div>
<div>
  <%= form_tag(controller: 'configure/groups', action: 'create') do %>
    <%= submit_tag('Configure new group') %>
    <%= text_field_tag(:group_name, nil, required: true) %>
  <% end %>
</div>

<% @groups.each do |group| %>
  <h2>
    <%= group.name %>
    <%= link_to 'Configure', "configure/groups/#{group.name}" %>
    <button>Build</button>
  </h2>

  <table>
    <% group.nodes.each do |node| %>
      <tr>
        <th><%= node.name %></th>
        <td><%= node.groups.join(',') %></td>
        <td>
          <%= link_to 'Configure', "configure/nodes/#{node.name}" %>
        </td>
        <td><button>Build</button></td>
        <td><button>Power reset</button></td>
      </tr>
    <% end %>
  </table>
<% end %>
