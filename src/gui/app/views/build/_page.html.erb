
<% if @build_ongoing %>

  <% if @build_complete %>
    <%= form_tag(build_path, method: :delete) do %>
      <% submit_tag("Clean up build", class: ['btn', 'btn-dark', 'btn-block']) %>
    <% end %>
  <% else %>
    <%= form_tag(shutdown_build_path) do %>
      <% submit_tag("Cancel build", class: ['btn', 'btn-dark', 'btn-block']) %>
    <% end %>
  <% end %>

  <div class='card'>
    <div class='card-header'>
      <ul class="nav">
        <li class="nav-item">
          <span class="navbar-brand">Build progress</span>
        </li>
      </ul>
    </div>

    <div class='card-body'>
      <pre
        class="bg-dark"
        ic-poll="1s"
        ic-src="<%= build_messages_path %>"
      ><%= render 'messages' -%></pre>
    </div>
  </div>

<% else %>
  <%= form_tag(start_build_path) do %>
    <% submit_tag("Build!", class: ['btn', 'btn-dark', 'btn-block']) %>
  <% end %>
<% end %>
