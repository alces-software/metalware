
<% if @build_complete %>
  <%= form_tag(build_path, method: :delete) do %>
    <% submit_tag("Clean up build", class: ['btn', 'btn-dark', 'btn-block']) %>
  <% end %>
<% else %>
  <%= form_tag(shutdown_build_path) do %>
    <% submit_tag("Cancel build",
                  disabled: @build_cancelling,
                  class: ['btn', 'btn-dark', 'btn-block']
                 ) %>
  <% end %>
<% end %>
